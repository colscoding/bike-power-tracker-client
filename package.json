{
    "name": "bike-power-tracker-client",
    "version": "1.0.0",
    "description": "Connect to bluetooth sensors and track heartrate and bike power and cadence",
    "scripts": {
        "test": "NODE_ENV=test node --import tsx --test src/**/*.test.ts",
        "test:watch": "NODE_ENV=test node --import tsx --test --watch src/**/*.test.ts",
        "dev": "vite --host",
        "start": "vite --host",
        "start:test": "vite --host --mode test",
        "build": "tsc --noEmit && vite build",
        "preview": "vite preview --host",
        "test:e2e": "NODE_ENV=test playwright test --config=test-e2e/playwright.config.js",
        "test:e2e:ui": "NODE_ENV=test playwright test --ui --config=test-e2e/playwright.config.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "typecheck": "tsc --noEmit"
    },
    "keywords": [
        "bike",
        "power",
        "tracker",
        "bluetooth",
        "fitness",
        "cycling",
        "pwa"
    ],
    "author": "",
    "license": "ISC",
    "type": "module",
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@playwright/test": "^1.56.1",
        "@types/node": "^24.10.1",
        "@types/web-bluetooth": "^0.0.21",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "prettier": "^3.7.1",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0",
        "vite": "^7.2.2",
        "vite-plugin-pwa": "^1.1.0",
        "workbox-window": "^7.4.0"
    }
}
